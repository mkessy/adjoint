{
    "name": "@adjoint/web",
    "version": "0.0.0",
    "type": "module",
    "license": "MIT",
    "description": "The web interface for Adjoint",
    "repository": {
        "type": "git",
        "url": "https://github.com/mkessy/adjoint",
        "directory": "packages/web"
    },
    "scripts": {
        "codegen": "build-utils prepare-v2",
        "dev": "vite",
        "build": "pnpm build-esm && vite build",
        "build-esm": "tsc -b tsconfig.build.json",
        "preview": "vite preview",
        "check": "tsc -b tsconfig.json",
        "test": "vitest",
        "coverage": "vitest --coverage"
    },
    "dependencies": {
        "@adjoint/domain": "workspace:^",
        "@effect-rx/rx": "latest",
        "@effect-rx/rx-react": "^0.42.4",
        "@effect/platform": "latest",
        "@effect/platform-browser": "latest",
        "@effect/sql": "latest",
        "@effect/sql-sqlite-wasm": "latest",
        "effect": "latest",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "typescript": "^5.9.2",
        "wink-distance": "^2.0.2",
        "wink-eng-lite-web-model": "^1.8.1",
        "wink-nlp": "^2.4.0"
    },
    "devDependencies": {
        "@effect/vitest": "latest",
        "@tailwindcss/postcss": "^4.1.11",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.21",
        "jsdom": "^24.0.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "vite": "^5.3.1",
        "vitest": "latest"
    },
    "effect": {
        "generateExports": {
            "include": [
                "**/*.ts",
                "**/*.tsx"
            ]
        }
    }
}
